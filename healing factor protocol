class HealingFactorCoating:
    def __init__(self):
        self.repair_mode = False
        self.psychic_factor = 1.0  # Thought intensity multiplier
        self.coating_map = {}      # Tracks coating status per suit region

    def detect_thought(self, neural_input):
        """
        Detects if the user's thought matches the 'sewing' repair trigger.
        """
        return neural_input == "sewing_pattern"

    def activate_protocol(self, signal_detected):
        """
        Activates repair mode if signal is confirmed.
        """
        self.repair_mode = signal_detected
        if self.repair_mode:
            print("ğŸ§µ Healing Factor activated â€” weaving begins.")
        else:
            print("ğŸ§˜ No repair signal detected â€” suit remains idle.")

    def weave_coating(self, damage_regions):
        """
        Applies nano-thread coating to damaged regions.
        """
        if not self.repair_mode:
            print("âš ï¸ Repair mode not active. No coating applied.")
            return

        for region in damage_regions:
            intensity = self.psychic_factor * 100  # Arbitrary scale
            self.coating_map[region] = f"Coated with intensity {intensity}"
            print(f"ğŸ§¬ Region '{region}' coated at intensity {intensity}.")

        print("âœ… Healing Factor coating complete.")

    def status_report(self):
        """
        Prints current coating status for all regions.
        """
        print("ğŸ“‹ Coating Status Report:")
        for region, status in self.coating_map.items():
            print(f" - {region}: {status}")

# ğŸ”¬ Test Run
healing = HealingFactorCoating()
brain_input = "sewing_pattern"  # Simulated thought trigger
damage = ["left_arm", "right_leg", "visor"]

healing.activate_protocol(healing.detect_thought(brain_input))
healing.weave_coating(damage)
healing.status_report()
